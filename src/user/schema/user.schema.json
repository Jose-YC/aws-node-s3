{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "type": "object",
    "required": ["name","email","password","rol"],
    "properties": {
      "name": {
        "type": "string",
        "description": "The user name is missing."
      },
      "email": {
        "type": "string",
        "pattern": "^\\S+@\\S+\\.S{2,4}\\S+$",
        "format": "email",
        "description": "The user email is missing."
      },
      "password": {
        "type": "string",
        "description": "The user password is missing."
      },
      "rol": {
        "type": "string",
        "description": "The user rol is missing."
      }
    }
  }
  
  